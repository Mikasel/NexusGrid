{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["phaser"],
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018", "es2019", "es2020"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
} 